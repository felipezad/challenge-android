<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>


    <style name="LogoSobre">
        <item name="android:textSize">64sp</item>
        <item name="android:textAlignment"
              tools:targetApi="jelly_bean_mr1">center
        </item>
        <!--<item name="android:letterSpacing" tools:targetApi="lollipop">-1.5sp</item>-->
    </style>
    <style name="LogoMenu">
        <item name="android:textSize">24sp</item>
        <!--<item name="android:letterSpacing" tools:targetApi="lollipop">-0.6sp</item>-->
    </style>

    <style name="PrecoPor">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/tomato</item>
    </style>

    <style name="DescricaoProduto">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescricaoProdutoBold">
        <!--<item name="android:letterSpacing" tools:targetApi="lollipop">-0.4sp</item>-->
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MenuItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:letterSpacing" tools:targetApi="lollipop">-0.3sp</item>-->
    </style>


    <style name="NomeDesenvolvedor">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment"
              tools:targetApi="jelly_bean_mr1">center
        </item>
        <!--<item name="android:letterSpacing" tools:targetApi="lollipop">-0.3sp</item>-->
    </style>


    <style name="NomeCategoria">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrecoDe">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/greyish</item>
    </style>

    <style name="DataDesenvolvimento">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment"
              tools:targetApi="jelly_bean_mr1">center
        </item>
        <!--<item name="android:letterSpacing" tools:targetApi="lollipop">-0.3sp</item>-->
    </style>

